{
  "allowedTools": [
    "Bash(pnpm *)",
    "Bash(npm *)",
    "Bash(node ./bin/undercity.js *)",
    "Bash(git status)",
    "Bash(git diff *)",
    "Bash(git log *)",
    "Bash(git branch *)",
    "Bash(git checkout *)",
    "Bash(git fetch *)",
    "Bash(git show *)"
  ],
  "disallowedTools": [
    "Bash(git add -A)",
    "Bash(git add .)",
    "Bash(git add --all)",
    "Bash(git stash -u)",
    "Bash(git stash --include-untracked)",
    "Bash(git push)",
    "Bash(git push *)"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "toolName": "edit"
        },
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format:fix $CC_EDIT_FILE_PATH 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": {
          "toolName": "write"
        },
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format:fix $CC_WRITE_FILE_PATH 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
