{
  "name": "undercity",
  "version": "0.1.0",
  "type": "module",
  "description": "Multi-agent orchestrator for Claude Max - Gas Town for normal people",
  "bin": {
    "undercity": "./bin/undercity.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.26.2",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --run --coverage",
    "typecheck": "tsc --noEmit",
    "start": "node ./bin/undercity.js",
    "daemon:start": "pm2 start ecosystem.config.cjs",
    "daemon:stop": "pm2 stop undercity",
    "daemon:restart": "pm2 restart undercity",
    "daemon:status": "pm2 status",
    "daemon:logs": "pm2 logs undercity",
    "daemon:kill": "pm2 kill",
    "cleanup": "bash ./scripts/cleanup-state.sh",
    "cleanup:deep": "bash ./scripts/cleanup-state.sh --deep",
    "semantic-check": "node ./bin/undercity.js semantic-check",
    "semantic-check:fix": "node ./bin/undercity.js semantic-check --fix",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format ./src",
    "format:fix": "biome format --write ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "syncpack:lint": "syncpack lint",
    "syncpack:fix": "syncpack fix-mismatches",
    "spell": "cspell \"**/*.{ts,md}\" --gitignore",
    "quality:check": "cs check --staged",
    "codescene:pr": "cs review --base-branch main",
    "security": "bash ./scripts/security-scan.sh",
    "verify": "tsx src/verification-cli.ts",
    "security:full": "gitleaks detect --no-git && semgrep scan --config auto ./src",
    "push": "bash ./scripts/push-and-watch.sh"
  },
  "author": "Justin Stimatze",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinstimatze/undercity.git"
  },
  "keywords": [
    "claude",
    "ai",
    "agent",
    "orchestrator",
    "multi-agent"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.5",
    "@anthropic-ai/tokenizer": "^0.0.4",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "ts-morph": "^27.0.2"
  },
  "pnpm": {
    "overrides": {
      "xml2js": ">=0.5.0"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/blessed": "^0.1.27",
    "@types/node": "^25.0.6",
    "@vitest/coverage-v8": "^4.0.16",
    "cspell": "^9.4.0",
    "husky": "^9.0.11",
    "syncpack": "^13.0.4",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  }
}
