{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2024",
    "declaration": true,
    "incremental": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2024"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist/",
    "**/*.test.*",
    "src/loadout-manager.ts",
    "src/loadout-scoring.ts"
  ]
}
